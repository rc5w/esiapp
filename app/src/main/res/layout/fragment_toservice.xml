<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:id="@+id/txtnoitemservice"
        android:text="No Schools Selected"
        android:visibility="gone"/>

    <LinearLayout
        android:gravity="center_vertical"
        android:background="@color/PageNameStripBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvPageName"
            android:layout_marginLeft="10dp"
            android:textColor="#FFFFFF"
            android:text="SERVICE CALLS"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:descendantFocusability="blocksDescendants">

            <LinearLayout
                android:background="@drawable/rounded_corner_edit_text_backgound"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:weightSum="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">


                <TextView
                    android:gravity="center"
                    android:layout_weight=".15"
                    android:textSize="16sp"
                    android:textColor="#017AC3"
                    android:text="SCHOOL CODE"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:background="#017AC3"
                    android:layout_width="1dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:gravity="center"
                    android:layout_weight=".40"
                    android:textSize="16sp"
                    android:textColor="#017AC3"
                    android:text="NAME"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:background="#017AC3"
                    android:layout_width="1dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:gravity="center"
                    android:layout_weight=".45"
                    android:textSize="16sp"
                    android:textColor="#017AC3"
                    android:text="STATUS"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />





            </LinearLayout>


            <ListView
                android:layout_margin="10dp"
                android:background="@drawable/rounded_corner_edit_text_backgound"
                android:id="@+id/lvservices"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="#017AC3"
                android:dividerHeight="1dp">

            </ListView>

        </LinearLayout>

    </ScrollView>



</LinearLayout>

