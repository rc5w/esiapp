<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <RelativeLayout
            android:background="@drawable/rounded_corner_background_dialog_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="WARNING : UNIT IS MISSING"
                android:textColor="@color/DialogBackground"
                android:textStyle="bold" />

            <ImageView
                android:layout_marginRight="5dp"
                android:layout_width="36px"
                android:layout_height="36px"
                android:id="@+id/ivClose"
                android:layout_alignParentRight="true"
                android:src="@mipmap/close_small" />

        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout

            android:background="@drawable/rounded_corner_background_dialog_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView

                android:layout_width="144px"
                android:layout_height="144px"
                android:layout_marginTop="30dp"
                android:src="@mipmap/attention" />


            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UNIT IS MISSING"
                android:textColor="@color/White"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Please inform AED contact that they"
                android:textColor="@color/White"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="need to file a police report for the"
                android:textColor="@color/White"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="unit as soon as possible"
                android:textColor="@color/White"
                android:textSize="18sp" />


            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"></LinearLayout>
        </LinearLayout>
            </ScrollView>




    </LinearLayout>
</LinearLayout>