<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:background="@drawable/rounded_corner_background_dialog_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="Confirmation"
                android:textSize="30dp"
                android:textColor="@color/DialogBackground"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/ivClose"
                android:layout_marginRight="5dp"
                android:layout_width="30px"
                android:layout_height="30px"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@mipmap/close_large" />

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout

                android:background="@drawable/rounded_corner_background_dialog_body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="144px"
                    android:layout_height="144px"
                    android:layout_marginTop="10dp"
                    android:src="@mipmap/attention" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="You are in the middle of entering data.Are you sure you want to leave this screen and lose all your information?"
                    android:textColor="@color/White"
                    android:textSize="25sp" />





                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="380px"
                        android:layout_height="90px"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/rounded_corner_background_dialog_buttons"
                        android:text="Confirm"
                        android:id="@+id/yesbtn"
                        android:textSize="24sp"
                        android:textColor="@color/DialogBackground"
                        android:textStyle="bold" />

                    <Button
                        android:layout_width="380px"
                        android:layout_height="90px"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/rounded_corner_background_dialog_buttons"
                        android:text="Cancel"
                        android:id="@+id/nobtn"
                        android:textSize="24sp"
                        android:textColor="@color/DialogBackground"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"></LinearLayout>
            </LinearLayout>
        </ScrollView>




    </LinearLayout>
</LinearLayout>
