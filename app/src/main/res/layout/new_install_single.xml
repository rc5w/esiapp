<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"

                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight=".5"
                    android:background="@drawable/background_edit_custom"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:id="@+id/serialnumber"
                            android:text="SERIAL #: "
                            android:textColor="@color/PageNameStripBackground"
                            android:textSize="22sp" />

                    </RelativeLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="2dp"
                        android:background="@color/PageNameStripBackground" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"

                        android:gravity="center"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_marginLeft="100dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="-50dp"
                                android:gravity="center"
                                android:src="@drawable/ic_launcher"
                                android:text="Exp. Date:"
                                android:textColor="@color/PageNameStripBackground"
                                android:textSize="20sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="New Date:"
                                android:layout_marginLeft="30dp"
                                android:textColor="@color/PageNameStripBackground"
                                android:textSize="20sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="Lot #:"
                                android:textColor="@color/PageNameStripBackground"
                                android:textSize="20sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/PageNameStripBackground" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1">

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight=".7">

                                <TextView
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:gravity="center"
                                    android:text="Adult Pads A"
                                    android:textColor="@color/PageNameStripBackground" />

                            </LinearLayout>

                            <View
                                android:layout_width="2dp"
                                android:layout_height="fill_parent"
                                android:background="@color/PageNameStripBackground" />

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_weight=".5">
                                <EditText

                                    android:layout_width="fill_parent"
                                    android:id="@+id/inspad1expdate"
                                    android:layout_weight="1"
                                    android:clickable="false"
                                     android:cursorVisible="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/background_edit" />

                            </LinearLayout>

                        </LinearLayout>

                        <View
                            android:layout_width="2dp"
                            android:layout_height="fill_parent"
                            android:background="@color/PageNameStripBackground" />

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_weight="1.5">
                            <TextView

                                android:layout_width="fill_parent"
                                android:id="@+id/updateinspad1newdate"
                                android:layout_weight="1"
                                android:layout_height="fill_parent"
                                android:background="@drawable/background_edit" />

                        </LinearLayout>

                        <View
                            android:layout_width="2dp"
                            android:layout_height="fill_parent"
                            android:background="@color/PageNameStripBackground" />

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1.5">

                            <EditText
                                android:gravity="center"
                                android:maxLines="1"
                                android:id="@+id/inspad1lotnumber"
                                android:inputType="number"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:background="@drawable/background_edit" />
                        </LinearLayout>
                        <View
                            android:layout_width="2dp"
                            android:layout_height="fill_parent"
                            android:background="@color/PageNameStripBackground" />

                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="2dp"
                        android:background="@color/PageNameStripBackground" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1">

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight=".7">

                                <TextView
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:gravity="center"
                                    android:text="Adult Pads B"
                                    android:textColor="@color/PageNameStripBackground" />

                            </LinearLayout>

                            <View
                                android:layout_width="2dp"
                                android:layout_height="fill_parent"
                                android:background="@color/PageNameStripBackground" />

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_weight=".5">
                                <EditText

                                    android:layout_width="fill_parent"
                                    android:id="@+id/inspad2expdate"
                                    android:layout_weight="1"
                                    android:cursorVisible="false"
                                    android:focusable="false"
                                    android:focusableInTouchMode="false"
                                    android:clickable="false"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/background_edit" />

                            </LinearLayout>

                        </LinearLayout>

                        <View
                            android:layout_width="2dp"
                            android:layout_height="fill_parent"
                            android:background="@color/PageNameStripBackground" />

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_weight="1.5">
                            <TextView

                                android:layout_width="fill_parent"
                                android:id="@+id/updateinspad2newdate"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:background="@drawable/background_edit" />

                        </LinearLayout>

                        <View
                            android:layout_width="2dp"
                            android:layout_height="fill_parent"
                            android:background="@color/PageNameStripBackground" />

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1.5">

                            <EditText
                                android:gravity="center"
                                android:maxLines="1"
                                android:inputType="number"
                                android:id="@+id/inspad2lotnumber"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:background="@drawable/background_edit" />
                        </LinearLayout>
                        <View
                            android:layout_width="2dp"
                            android:layout_height="fill_parent"
                            android:background="@color/PageNameStripBackground" />


                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="2dp"
                        android:background="@color/PageNameStripBackground" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1">

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight=".7">

                                <TextView
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:gravity="center"
                                    android:text="Pediatric pads"
                                    android:textColor="@color/PageNameStripBackground" />

                            </LinearLayout>

                            <View
                                android:layout_width="2dp"
                                android:layout_height="fill_parent"
                                android:background="@color/PageNameStripBackground" />

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_weight=".5">
                                <EditText

                                    android:layout_width="fill_parent"
                                    android:id="@+id/inspadpedexpdate"
                                    android:layout_weight="1"
                                    android:cursorVisible="false"
                                    android:focusable="false"
                                    android:focusableInTouchMode="false"
                                    android:clickable="false"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/background_edit" />

                            </LinearLayout>

                        </LinearLayout>

                        <View
                            android:layout_width="2dp"
                            android:layout_height="fill_parent"
                            android:background="@color/PageNameStripBackground" />

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_weight="1.5">
                            <TextView

                                android:layout_width="fill_parent"
                                android:id="@+id/updateinspadpednewdate"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:background="@drawable/background_edit" />

                        </LinearLayout>

                        <View
                            android:layout_width="2dp"
                            android:layout_height="fill_parent"
                            android:background="@color/PageNameStripBackground" />

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1.5">

                            <EditText
                                android:gravity="center"
                                android:maxLines="1"
                                android:inputType="number"
                                android:id="@+id/inspadpedlotnumber"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:background="@drawable/background_edit" />
                        </LinearLayout>
                        <View
                            android:layout_width="2dp"
                            android:layout_height="fill_parent"
                            android:background="@color/PageNameStripBackground" />

                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="2dp"
                        android:background="@color/PageNameStripBackground" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="7"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight=".4"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_marginTop="5dp"
                                android:text="Comments"
                                android:textColor="@color/PageNameStripBackground"
                                android:textSize="20sp" />

                            <EditText
                                android:gravity="center"
                                android:layout_width="fill_parent"
                                android:layout_height="120dp"
                                android:layout_marginBottom="10dp"
                                android:id="@+id/inscomments"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:background="@drawable/background_edit_custom" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight=".6"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_marginTop="5dp"
                                android:text="Spare Battery install Before Date:"
                                android:textColor="@color/PageNameStripBackground"
                                android:textSize="20sp" />

                            <TextView
                                android:gravity="center"
                                android:layout_width="fill_parent"
                                android:layout_height="120dp"
                                android:layout_marginBottom="10dp"
                                android:id="@+id/inssparebatterydate"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:background="@drawable/background_edit_custom" />

                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="10dp"
                    android:layout_weight=".5"
                    android:background="@drawable/background_edit_custom"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight=".5"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal">

                            <CheckBox
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/inscbnewserial"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="New Serial Number:"
                                android:textColor="@color/PageNameStripBackground"
                                android:textSize="18sp" />

                            <LinearLayout
                                android:gravity="center"
                                android:orientation="vertical"
                                android:layout_width="250dp"
                                android:layout_height="wrap_content">

                                <EditText
                                    android:background="@color/White"
                                    android:layout_width="250dp"
                                    android:id="@+id/insednewserial"
                                    android:clickable="false"
                                    android:layout_height="wrap_content" />

                                <TextView
                                    android:layout_marginLeft="5dp"
                                    android:background="@color/PageNameStripBackground"
                                    android:layout_width="250dp"
                                    android:layout_height="1dp" />


                            </LinearLayout>



                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:orientation="horizontal">

                            <CheckBox
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/insstatusindicator"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Status Indicator"

                                android:textColor="@color/PageNameStripBackground"
                                android:textSize="18sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:orientation="horizontal">

                            <CheckBox
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/insfastresponsekit"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Fast Response Kit"

                                android:textColor="@color/PageNameStripBackground"
                                android:textSize="18sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:orientation="horizontal">

                            <CheckBox
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/inscbdatacardstatus"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Data Card Status"

                                android:textColor="@color/PageNameStripBackground"
                                android:textSize="18sp" />

                        </LinearLayout>



                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginBottom="10dp"
                            android:orientation="horizontal">

                            <CheckBox
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/inscbpediatric"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Pediatric Key"

                                android:textColor="@color/PageNameStripBackground"
                                android:textSize="18sp" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight=".5"
                        android:orientation="vertical"
                        android:gravity="right"
                        android:weightSum="1">

                        <LinearLayout
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:layout_marginRight="15dp"
                            android:layout_marginTop="15dp"
                            android:layout_width="318dp"
                            android:layout_height="wrap_content"
                            android:background="@color/PageNameStripBackground"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_marginLeft="10dp"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="PHYSICAL LOCATION:"
                                android:textColor="#ffffff"
                                android:textSize="20sp" />


                            <LinearLayout
                                android:layout_marginLeft="10dp"
                                android:layout_gravity="left"
                                android:orientation="horizontal"
                                android:layout_marginTop="10dp"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content">



                                <TextView

                                    android:paddingLeft="5dp"
                                    android:gravity="left"
                                    android:layout_gravity="left"
                                    android:paddingRight="5dp"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:layout_weight="1"
                                    android:id="@+id/insphyloc"
                                    android:text="Main Entrance"
                                    android:textColor="#ffffff"
                                     />



                                    <TextView
                                        android:layout_marginRight="5dp"



                                        android:layout_weight="1"
                                        android:layout_width="fill_parent"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/service_calls_update_button_background"
                                        android:gravity="center"
                                        android:text="UPDATE"
                                        android:id="@+id/updateinsphysicalloc"
                                        android:textStyle="bold"
                                        android:textColor="@color/UpdateButtonServiceCall"
                                        android:textSize="15sp" />


                            </LinearLayout>



                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

  
</LinearLayout>
